<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.blanche.orgevents.LocationVoteActivity">

    <TextView
        android:id="@+id/tvLoc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="loc1"
        android:textAlignment="viewStart"
        android:textSize="36sp"
        android:layout_above="@+id/tvLoc2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp" />

    <TextView
        android:id="@+id/tvLoc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loc2"
        android:textSize="36sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/tvLoc1" />

    <TextView
        android:id="@+id/tvLoc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loc3"
        android:textSize="36sp"
        android:layout_alignBottom="@+id/rbLoc3"
        android:layout_alignStart="@+id/tvLoc2" />

    <RatingBar
        android:id="@+id/rbLoc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLoc1"
        android:layout_alignStart="@+id/rbLoc2" />

    <RatingBar
        android:id="@+id/rbLoc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLoc2"
        android:layout_toEndOf="@+id/bSendVote"
        android:layout_marginStart="23dp" />

    <RatingBar
        android:id="@+id/rbLoc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/rbLoc2"
        android:layout_alignStart="@+id/rbLoc2" />

    <Button
        android:id="@+id/bSendVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="77dp"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
