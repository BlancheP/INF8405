<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizerDashboardActivity">

    <Button
        android:id="@+id/bCreateEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create event"
        android:layout_marginStart="54dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/locNote3"
        android:layout_toEndOf="@+id/locNote3" />

    <Button
        android:id="@+id/bVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:layout_marginStart="61dp"
        android:layout_alignBaseline="@+id/bCreateEvent"
        android:layout_alignBottom="@+id/bCreateEvent"
        android:layout_toEndOf="@+id/bCreateEvent" />

    <TextView
        android:id="@+id/tvDashLoc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:text="TextView" />

    <TextView
        android:id="@+id/tvDashLoc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tvDashLoc1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/tvDashLoc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="TextView"
        android:layout_below="@+id/tvDashLoc1"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/locNote1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvDashLoc1"
        android:layout_alignBottom="@+id/tvDashLoc1"
        android:text="2" />

    <TextView
        android:id="@+id/locNote2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvDashLoc2"
        android:layout_toRightOf="@+id/tvDashLoc2"
        android:text="5" />

    <TextView
        android:id="@+id/locNote3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvDashLoc3"
        android:layout_toRightOf="@+id/tvDashLoc3"
        android:text="5" />


</RelativeLayout>