<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.blanche.projetfinal.AddPhotoFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/loadphoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Load photo"
                android:layout_weight="0.5"
                android:drawableLeft="@mipmap/ic_load_photo"
                />
            <Button
                android:id="@+id/takephoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take photo"
                android:layout_weight="0.5"
                android:drawableLeft="@mipmap/ic_take_photo"
                />
            <Button
                android:id="@+id/cancelphoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_weight="0.5"
                android:drawableLeft="@mipmap/ic_cancel_photo"
                android:visibility="gone"/>
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:drawableLeft="@mipmap/ic_save_photo"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/targetimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</FrameLayout>
