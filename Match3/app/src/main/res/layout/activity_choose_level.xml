<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="tp1.inf8405.match3.ChooseLevelActivity">

    <Button
        android:text="Niveau 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level1_button"
        android:layout_marginTop="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/level2_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_green_light"
        android:onClick="clickLevel"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Niveau 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/level4_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/common_plus_signin_btn_text_light_focused"
        android:onClick="clickLevel"
        android:layout_below="@+id/level3_button"
        android:layout_centerHorizontal="true"
        android:enabled="true"  />

    <Button
        android:text="Niveau 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level2_button"
        android:layout_marginTop="29dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/common_plus_signin_btn_text_light_default"
        android:onClick="clickLevel"
        android:layout_below="@+id/level1_button"
        android:layout_alignStart="@+id/level3_button"
        android:enabled="true" />

    <Button
        android:text="Niveau 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/level3_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/common_plus_signin_btn_text_light_default"
        android:onClick="clickLevel"
        android:layout_below="@+id/level2_button"
        android:layout_alignStart="@+id/level4_button"
        android:enabled="true" />

</RelativeLayout>
